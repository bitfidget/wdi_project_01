<%= form_for @user do |f| %>
  <p>
    <%= f.label :username %><br />
    <%= f.text_field :username %>
  </p>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :image %><br />
    <%= f.text_field :image %>
  </p>  
  <p>
    <%= f.label :address %><br />
    <%= f.text_field :address %>
  </p>
  <% if @user.latitude %>
    <p>Lat: <%= @user.latitude %> Lon: <%= @user.longitude %></p>
  <% end %>

  <p><%= f.submit %></p>
<% end %>