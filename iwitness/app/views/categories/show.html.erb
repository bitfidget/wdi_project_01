<h1><%= @category.title %></h1>
<nav id="meta">
  <ul>
    <li><%= link_to("Edit Category", edit_category_path(@category)) %></li>
    <li><%= link_to("Delete Category", @category, :confirm => "Are you sure you want to delete category #{@category.title.upcase}?", :method => :delete) %></li>
    <li><%= link_to("New Category", new_category_path) %></li>
  </ul>
</nav>
<% @category.posts.each do |post| %>
  <section>
    <h4>News from <%= post.address %></h4>
    <h2><%= link_to(post.title, post) %></h2>
  </section>
<% end %>