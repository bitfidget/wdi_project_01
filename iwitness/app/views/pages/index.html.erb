<section id="column-left" class="home">
    <h1>stay informed</h1>
    <h2>instantly. where ever you may land.
</section>
<section id="column-right">
  <div class="inner">
    <p>Your current location appears to be <%= session[:address] %></p>
    <p><%= link_to("See What's Happening Around You", posts_path) %></p>
    <form action="index" method="post">
      <label for="address">Or enter a diffrent location</label>
      <input name="address" id="address" type="text" value="<%= session[:address] %>">
      <label for="distance">Search Radius</label>
      <input type="number" id="distance" name="distance" value="<%= session[:distance] %>">
      <button>GO!</button>
    </form>
  </div>
</section>