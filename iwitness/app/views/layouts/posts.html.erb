<!DOCTYPE html>
<html>
<head>
  <title>Iwitness</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js" ></script>
    <script type="text/javascript"
      src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAtDL6XVP-2ZsRV9jdCybm__mXoBEp-NUg&sensor=false">
    </script>
    <script type="text/javascript">
      function initialize() {
        var mapOptions = {
          // center: new google.maps.LatLng(-34.397, 150.644)
          center: new google.maps.LatLng(<%= session[:latitude] %>, <%= session[:longitude] %>),
          zoom: 14
        };
        var map = new google.maps.Map(document.getElementById("map-canvas"), mapOptions);
        //var image = 'images/beachflag.png';
        // iterate through posts here and add them as points
        <% @posts.each do |post| %>        

          var marker_<%= post.id %> = new google.maps.Marker({
              position: new google.maps.LatLng(<%= post.latitude %>, <%= post.longitude %>),
              map: map,
              title: '<%= post.title %>'
          });

        <% end %>



      }
      google.maps.event.addDomListener(window, 'load', initialize);


$(function () {
    //  Accordion Panels
    $(".accordion div").show();
    setTimeout("$('.accordion div').slideToggle('slow');", 1000);
    $(".accordion h2").click(function () {
        $(this).next(".pane").slideToggle("slow").siblings(".pane:visible").slideUp("slow");
        $(this).toggleClass("current");
        $(this).siblings("h3").removeClass("current");
    });
});




    </script>
  <%= csrf_meta_tags %>
</head>
<body class="<%= params[:controller] %> <%= params[:action] %>">
  
  <%#= render "header" %>
  <header>
    <nav id="main">
      <ul>
        <li><%= link_to("Home", root_path) %></li>
        <li><%= link_to("News", posts_path) %></li>
      </ul>
      <ul id="user">
        <%== usernav %>
      </ul>
    </nav>
  </header>

  <div id='container'>
    <%= yield %>
  </div>
  
  <footer>
    <nav id="footer">
      <ul>
        <li><a href="">About What's@</a></li>
        <li><a href="">Terms of Service</a></li>
        <li><a href="">Privacy</a></li>
        <li><a href="">Contact</a></li>
      </ul>
    </nav>
  </footer>
</body>
</html>
