<!DOCTYPE html>
<html>
<head>
  <title>Iwitness</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js" ></script>
    <script type="text/javascript"
      src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAtDL6XVP-2ZsRV9jdCybm__mXoBEp-NUg&sensor=false">
    </script>
    <script type="text/javascript">
      // make some variables cos it looks impressive
      var map;
      var epicentre = new google.maps.LatLng(<%= session[:latitude] %>, <%= session[:longitude] %>);
      var epicentreMap = 'custom_style';
      var radius = <%= session[:distance].to_i*1000 %>;
      // attempt to set zoom level appropriate to the distance 
      // 1 => 15
      // 2 => 14
      // 3 => 14
      // 4 => 13
      // 5 => 13
      // 6 => 13
      // 7 => 13
      // 8 => 13
      // 9 => 12
      // 10 => 12
      <%=  if session[:distance].to_i == 1 
            zoomer = 15
          elsif session[:distance].to_i <= 3 
            zoomer = 14
          elsif session[:distance].to_i <= 8
            zoomer = 13
          elsif session[:distance].to_i <=10
            zoomer = 12
          end
      %>
      var zoom = <%= zoomer %>;
      
      function initialize() {

        // custom map styles
        var featureOpts = [
          {
            stylers: [
              { hue: '#4466FF' },
              { gamma: 1 },
              { weight: 0.5 }
            ]
          },   
          {
            featureType: 'water',
            stylers: [
              { color: '#112299' }
            ]
          }
        ];

        // create the map
        var mapOptions = {
          zoom: zoom,
          center: epicentre,
          mapTypeControlOptions: {
            mapTypeIds: [google.maps.MapTypeId.ROADMAP, epicentreMap]
          },
          mapTypeId: epicentreMap
        };
        map = new google.maps.Map(document.getElementById('map-canvas'), mapOptions);

        var styledMapOptions = {
          name: 'Custom Style'
        };

        // through iteration define each marker per post + a listener to show the actual post once clicked 
        <% @posts.each do |post| %>        
          var marker_<%= post.id %> = new google.maps.Marker({
              position: new google.maps.LatLng(<%= post.latitude %>, <%= post.longitude %>),
              map: map,
              animation: google.maps.Animation.DROP,
              title: '<%= post.title %>'
          });
          google.maps.event.addListener(marker_<%= post.id %>, 'click', function () {
            window.location.href = '/posts/<%= post.id %>';
          });
        <% end %>

        // draw the circle to show the search radius
        var radiusMarker = new google.maps.Circle({
          strokeColor: '#FF6600',
          strokeOpacity: 0.8,
          strokeWeight: 2,
          fillColor: '#FFFFFF',
          fillOpacity: 0.35,
          map: map,
          center: epicentre,
          radius: radius
        });
        // do some impressive maps stuff
        var customMapType = new google.maps.StyledMapType(featureOpts, styledMapOptions);
        map.mapTypes.set(epicentreMap, customMapType);
      }
      // make rocket go now
      google.maps.event.addDomListener(window, 'load', initialize);
    </script>
  <%= csrf_meta_tags %>
</head>
<body class="<%= params[:controller] %> <%= params[:action] %>">
  
  <%#= render "header" %>
  <header>
    <nav id="main">
      <ul>
        <li><%= link_to("Home", root_path) %></li>
        <li><%= link_to("News", posts_path) %></li>
      </ul>
      <ul id="user">
        <%== usernav %>
      </ul>
    </nav>
  </header>

  <div id='container'>
    <%= yield %>
  </div>
  
  <footer>
    <nav id="footer">
      <ul>
        <li><a href="">About What's@</a></li>
        <li><a href="">Terms of Service</a></li>
        <li><a href="">Privacy</a></li>
        <li><a href="">Contact</a></li>
      </ul>
    </nav>
  </footer>
</body>
</html>
